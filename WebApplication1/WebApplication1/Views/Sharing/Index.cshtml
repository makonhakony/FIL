@model WebApplication1.Models.Event
@{
    /**/

    ViewBag.Title = "Sharing";
}
<h2 class="stylehead">@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<a class="b" onclick="placeSharing()">Generate marker</a>

<div id="locationFields" style="text-align:center">
    <span class="input-box">
        <input id="autocomplete"
               class="autocomplete"
               placeholder="Enter your address"
               onFocus="geolocate()"
               type="text" />
    </span>
    
    <button id="placebutton" class="b2">Add</button>
    
</div>
<hr />
<script type="text/javascript" src="~/Scripts/sharing.js"></script>
<div style="height:500px; width:100%" id="map"></div>

<div class="modal fade" id="article-editor" role="dialog">
    <div class="modal-header">

        <h3 style="text-align:center; text-transform:uppercase;">Department form</h3>
    </div>
    <div class="modal-body">
        <div class="row-fluid">

            <p></p>

            <p></p>
            <div class="controls span6">
                <label class="control-label" for="Title">Event code</label>
                <input type="text" class="input-xlarge" id="ecode" placeholder="Event code" />
                @Html.ValidationMessageFor(model => model.EventCode, "", new { @class = "text-danger" })
            </div>
            <p></p>
            <div class="controls span6">
                <label class="control-label" for="Title">Event name</label>
                <input type="text" class="input-xlarge" id="ename" placeholder="Event name" />
            </div>
            <div class="controls span6">
                <label class="control-label" for="Title">Event note</label>
                <input type="text" class="input-xlarge" id="enote" placeholder="Event note" />
            </div>
        </div>
    </div>
    <div id="validationSummary" class="validation-summary">
        <ul></ul>
    </div>
    <div class="modal-footer">
        <a class="btn" id="Close-btn" data-dismiss="modal">Close</a>
        <a class="btn btn-primary" id="Save-btn">Save Changes</a>
    </div>
</div>


